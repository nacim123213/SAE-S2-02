package graph;

import java.util.*;

public class SimpleGraph<T> implements Graph<T> {
    private Map<T, List<Arc<T>>> adjList = new HashMap<>();

    public SimpleGraph() {
    }

    public void addVertex(T vertex) {
        adjList.putIfAbsent(vertex, new ArrayList<>());
    }

    public void addEdge(T vertex1, T vertex2) {
        addVertex(vertex1);
        addVertex(vertex2);
        adjList.get(vertex1).add(new Arc<>(1, vertex2));
        adjList.get(vertex2).add(new Arc<>(1, vertex1));
    }

    @Override
    public List<Arc<T>> getSucc(T s) {
        return adjList.getOrDefault(s, new ArrayList<>());
    }
}
